<% layout("/layouts/boilerplate")%>
<h3 >All Listing</h3>
<div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1
row-cols-xs-1" >
    <% for(let listing of allisting){  %>
      <a href="/listings/<%= listing._id %>" class="listinglink">
        <div class="card col">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing-image"
          style="height: 21rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b> 

              <% if (listing && listing.price !== null && typeof listing.price !== 'undefined') { %>
                &#8377;<%= listing.price.toLocaleString("en-IN") %> Night
            <% } else { %>
                Price information not available
            <% } %>
            </p>
            </div>
          </div>
        </a>
        <%  } %>
      </div> 


      