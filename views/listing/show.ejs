<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-10 offset-2">
    <h3><%= listinginfo.title %></h3>
  </div>
  <div class="card col-8 offset-2 show-card listing-card" style="width: 60%">
    <img
      src="<%= listinginfo.image.url%>"
      class="card-img-top show-img"
      alt="listing image"
    />
    <div class="card-body">
<p class="card-text"> owned by : <b> <%=listinginfo.owner.username %></b></p>  
<p class="card-text"><%= listinginfo.description %> </p>
<p class="card-text"> &#8377;<%= listinginfo.price.toLocaleString("en-IN") %></p>
<p class="card-text"><%= listinginfo.location %></p>
<p class="card-text"> <%= listinginfo.country %></p>
    </div>

    <% if(currUser && listinginfo.owner._id.equals(currUser._id)){ %>
    <div class="btns mt-4">
      <a
      href="/listings/<%= listinginfo._id %>/edit"
      class="btn btn-dark col-md-2 edit-btn"
      >Edit</a
      >
      <form
      action="/listings/<%= listinginfo._id%>?_method=DELETE"
      method="post"
      >
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
  <% } %>  

 
    <div class="col-12 mb-3">
      <hr />
      <%  if(currUser){ %>
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listinginfo._id %>/review"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <label for="rating" class="form-lable">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-lable">Comment</label>
          <textarea
            name="review[Comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            plsese add some comments for reviews
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>
  <hr>
      <h4><b> All Reviews </b></h4>
      <!-- addhere -->
      <div class="row">
        <% for(reb of listinginfo.review){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">@<%=reb.author.username%></h5>
            <p class="card-text"><%=reb.Comment%></p>
            <p class="card-text"><%=reb.rating%> stars</p>
          </div>
          <form action="/listings/<%=listinginfo._id%>/review/<%=reb._id%>?_method=DELETE" class="mb-3" method="post">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
