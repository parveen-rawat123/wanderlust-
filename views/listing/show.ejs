<% layout("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-10 offset-2 ">
            <h3>Listing Details </h3>
        </div>
        <div class="card col-8 offset-2 show-card" style="width: 60%;">
            <img src="<%= listinginfo.image%>" class="card-img-top show-img" alt="listing image ">
            <div class="card-body ">
                <p class="card-text">
                    <b>
                        <%= listinginfo.title %>
                    </b> <br>
                    <%= listinginfo.description %> <br>
                        &#8377;<%= listinginfo.price.toLocaleString("en-IN") %> <br>
                            <%= listinginfo.location %> <br>
                                <%= listinginfo.country %> <br>
                </p>
            </div>
            
            <div class="btns mt-4">
                <a href="/listings/<%= listinginfo._id %>/edit" class="btn btn-dark  col-md-2  edit-btn">Edit</a>
                <form action="/listings/<%= listinginfo._id%>?_method=DELETE" method="post">
                    <button class="btn btn-dark  offset-3">Delete  
                    </button>
                </form>
            </div>
        </div>
    </div>