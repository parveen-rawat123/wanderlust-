<% layout("/layouts/boilerplate")%>
<body>
    <h3>create a new listing</h3>

    <form action="/listings" method="POST">

        <div class="mb-3">
            <label for="title" class="form-lable">Enter Title</label>
            <input type="text" name="listing[title]" placeholder="enter title"  class="form-control"> 
        </div>


          <div class="mb-3">
            <label for="discription" class="form-lable">Discription</label>
              <textarea  name="listing[description]" class="form-control"></textarea>       
            </div>

            <div class="mb-3">
                <label for="image" class="form-lable">image link</label>
                <input type="text" name="listing[image]" placeholder="enter image URL/LINK" class="form-control">
            </div>

            <div class="mb-3">
                <label for="price" class="form-lable">Price</label>
                <input type="number" name="listing[price]" placeholder="enter price" class="form-control"> 
            </div>

            <div class="mb-3">
                <label for="location" class="form-lable">location</label>
                <input type="text" name="listing[location]" placeholder="enter location" class="form-control"> 
            </div>

            <div class="mb-3">
                <label for="country" class="form-lable">country</label>
                <input type="text" name="listing[country]" placeholder="enter countryName"
                class="form-control" > 
            </div>
      <br><br>
    <button class="btn btn-dark"> ADD</button>
    </form>
    
</body>